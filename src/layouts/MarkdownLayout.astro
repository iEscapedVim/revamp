---
import Contact from "@/components/sidebar/contact.astro";
import Head from "@comps/head.astro"
import Header from "@comps/header.astro"
import Footer from "@comps/footer.astro"
import Mcan from '@comps/mcan.tsx';
import { Schema } from "astro-seo-schema"
const { SiteTitle, postTitle, postDescription, postImage, publishDate, modifiedDate, postSlug} = Astro.props;
---
<!doctype html>
<html lang="en" class="overflow-x-hidden">
	<Head> 
		<title>{postTitle} | {SiteTitle}</title>

		<meta property="og:title" content={postTitle} />
		<meta property="og:type" content="article" />
		<meta property="og:description"  content={postDescription} />
		<meta property="og:determiner" content="the" />
		<meta property="og:locale" content="en_US" />
		<meta property="og:site_name" content={postTitle} />
		<meta property="og:image" content={postImage} />
		<meta property="og:image:type" content="image/jpeg" />
		<meta property="og:image:alt" content={postTitle} />

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta property="twitter:url" content={postSlug}>
		<meta name="twitter:title" content={postTitle}>
		<meta name="twitter:description" content={postDescription}>
		<meta name="twitter:image" content={postImage}>
		
		<Schema
			item={{
				"@context": "https://schema.org",
				"@type": "Article",
				headline: postTitle,
				description: postDescription,
				image: postImage,
				datePublished: publishDate,
				dateModified: modifiedDate,
			}}
		/>
	</Head>
	<body class="bg-base-100">
		<Mcan client:load />
		<Header />
		    <section class="pt-24 grid grid-cols-1 md:grid-cols-12 px-6 gap-8">
                <slot />
				<Contact />
            </section>
		<Footer />
	</body>
</html>
