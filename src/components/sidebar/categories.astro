---
import { getCategories } from '@/lib/wordpress';

const categories: { name: string; count: number }[] = await getCategories();

// Sort categories by count
const sortedCategories = categories.sort((a, b) => b.count - a.count);
---

<div class="flex flex-col gap-2">
  {sortedCategories.map(({ name, count }) => (
    <a href={`/category/${name.toLowerCase()}`} class="group border-2 border-primary flex justify-between items-center px-4 py-2 text-sm font-medium text-primary hover:text-white bg-white/50 hover:bg-gradient-to-r hover:from-primary hover:to-secondary rounded-lg transition-all duration-300">
      <span>{name}</span>
      <span class="px-2 py-1 text-xs bg-gradient-to-r from-primary to-secondary text-white rounded-full group-hover:from-white group-hover:to-white group-hover:text-primary">
        {count}
      </span>
    </a>
  ))}
</div>