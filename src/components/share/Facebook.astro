---
import { Image } from "astro:assets";

const { url} = Astro.props;
let URL = `https://www.facebook.com/sharer/sharer.php?u=${url}`

import Face from '@assets/share/facebook.png'
---
<a class="social-share-btn" target="_blank" href={URL} rel="noopener noreferrer">
  <Image src={Face} alt="Facebook" class="w-8 h-auto hover:scale-125 transition-all duration-500" />
</a>